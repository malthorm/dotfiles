# General Aliases
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias rm="rm -I"
alias mv="mv -i"
alias vi="nvim"
alias ls="ls --color=auto --group-directories-first"
alias ll="ls -l --color=auto --group-directories-first"
alias la="ls -lah --color=auto --group-directories-first"
alias df="df -h"
alias free="free -m"
alias b="cd .."
alias cat='bat'
alias config="cd ~/.config"
alias copy='xsel -ib'
alias youtube='yt-dlp -x --audio-format "mp3"'
alias enkeys='setxkbmap -layout us -variant altgr-intl -option nodeadkeys'
alias todos='nvim /home/malthor/Sync/obsidian/second-brain/6 - Main Notes/TODO.md'
alias shop='nvim /home/malthor/Sync/obsidian/second-brain/6 - Main Notes/shopping.md'
alias nvim-kickstart='NVIM_APPNAME="nvim-kickstart" nvim'
alias vip='NVIM_APPNAME="nvim-pde" nvim'
alias kchain='keychain --eval --quiet id_ed25519'
alias py='python3'

# Git Aliases
alias gpush="git push"
alias gpull="git pull --prune"
alias gc="git commit -m"
alias ga="git add ."
alias gadog='PAGER="less -F -X" git adog'
alias glog='PAGER="less -F -X" git log'
alias dotfiles="git --git-dir=$HOME/.dotfiles --work-tree=$HOME"

# obsidian
alias oo='cd $HOME/Sync/obsidian/second-brain'
alias or='cd $HOME/Sync/obsidian/second-brain/inbox/*.md'
